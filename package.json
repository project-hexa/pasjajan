{
  "name": "pasjajan-mart",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "test:web": "turbo test --filter=web",
    "test:api": "turbo test -filter=api",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,mdx,php}\"",
    "shadcn:add": "pnpm dlx shadcn add -c apps/web",
    "init:all": "pnpm install && cd apps/api && composer setup && composer update && cd ../..",
    "init:web": "cd apps/web && pnpm install && cd ../..",
    "init:api": "cd apps/api && composer setup && cd ../..",
    "radix:add": "pnpm add --filter=ui",
    "create:fitur": "turbo gen \"Templating Frontend Dev Pasjajan\""
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.2",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "core-js-pure",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ],
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "@turbo/gen": "^2.7.2",
    "inquirer": "^13.1.0",
    "nextjs-toploader": "^3.9.17",
    "recharts": "^3.6.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
